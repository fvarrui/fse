<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.60">
   <top>
      <HBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="grupoCombo" prefWidth="150.0" />
            <Button fx:id="calcularButton" mnemonicParsing="false" onAction="#onCalcularButtonAction" text="Calcular" />
            <ProgressIndicator fx:id="calcularProgress" progress="0.0" />
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TableView fx:id="horasTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="asignaturaColumn" prefWidth="75.0" text="Asignatura" />
          <TableColumn fx:id="profesorColumn" minWidth="200.0" prefWidth="75.0" text="Profesor" />
        </columns>
      </TableView>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
